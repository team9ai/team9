{
  "name": "@team9/database",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./schemas": "./src/schemas/index.ts",
    "./config": "./src/config.service.ts"
  },
  "scripts": {
    "build": "tsc",
    "build:schemas": "tsc -p tsconfig.schemas.json",
    "db:generate": "pnpm build:schemas && dotenv -e ../../.env -- drizzle-kit generate --config=drizzle.config.mjs",
    "db:migrate": "dotenv -e ../../.env -- drizzle-kit migrate --config=drizzle.config.mjs",
    "db:push": "pnpm build:schemas && dotenv -e ../../.env -- drizzle-kit push --config=drizzle.config.mjs",
    "db:studio": "dotenv -e ../../.env -- drizzle-kit studio --config=drizzle.config.mjs"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.7.3"
  }
}

{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "customConditions": ["source"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@team9/auth": ["libs/auth/src"],
      "@team9/auth/*": ["libs/auth/src/*"],
      "@team9/database": ["libs/database/src"],
      "@team9/database/*": ["libs/database/src/*"],
      "@team9/shared": ["libs/shared/src"],
      "@team9/shared/*": ["libs/shared/src/*"],
      "@team9/redis": ["libs/redis/src"],
      "@team9/redis/*": ["libs/redis/src/*"],
      "@team9/ai-client": ["libs/ai-client/src"],
      "@team9/ai-client/*": ["libs/ai-client/src/*"],
      "@team9/rabbitmq": ["libs/rabbitmq/src"],
      "@team9/rabbitmq/*": ["libs/rabbitmq/src/*"],
      "@team9/storage": ["libs/storage/src"],
      "@team9/storage/*": ["libs/storage/src/*"],
      "@team9/enterprise-tenant": ["../../enterprise/libs/tenant/src"],
      "@team9/enterprise-tenant/*": ["../../enterprise/libs/tenant/src/*"],
      "@team9/enterprise-sso": ["../../enterprise/libs/sso/src"],
      "@team9/enterprise-sso/*": ["../../enterprise/libs/sso/src/*"],
      "@team9/enterprise-audit": ["../../enterprise/libs/audit/src"],
      "@team9/enterprise-audit/*": ["../../enterprise/libs/audit/src/*"],
      "@team9/enterprise-analytics": ["../../enterprise/libs/analytics/src"],
      "@team9/enterprise-analytics/*": [
        "../../enterprise/libs/analytics/src/*"
      ],
      "@team9/enterprise-license": ["../../enterprise/libs/license/src"],
      "@team9/enterprise-license/*": ["../../enterprise/libs/license/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
